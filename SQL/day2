-- INSERT data from 'customers' into 'persons'

create table persons(
    id int,
    FIRSTNAME VARCHAR(50),
    LASTNAME VARCHAR(50),
    COUNTRY VARCHAR (25),
    SCORE int
);

INSERT into persons
select * from customers;

SELECT * FROM PERSONS;


-- update the customer's firstname for the ID 6
update CUSTOMERS
SET customerID = 6
WHERE FIRSTNAME = 'Eswar';

select * from customers;

-- Delete the customers where id is greater than 5 

DELETE FROM  CUSTOMERS    
WHERE customerid > 5;
